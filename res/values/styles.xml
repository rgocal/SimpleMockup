<resources>

    <style name="MockupTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:actionBarStyle">@style/MockupMainAB</item>
        <item name="android:actionBarWidgetTheme">@style/Mockup.Widget</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Mockup.Widget" parent="@android:style/Theme.Holo">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MockupMainAB" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

</resources>